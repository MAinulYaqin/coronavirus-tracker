<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/header</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="box_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/box_size</item>
        <item name="android:background">@color/boxesBackground</item>
        <item name="android:elevation">@dimen/elevation</item>
        <item name="android:padding">@dimen/padding</item>
    </style>

    <style name="status_card_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">170dp</item>
        <item name="android:background">@color/greenDark</item>
    </style>

    <style name="status_card_title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/medium_margin</item>
    </style>

    <style name="item_holder_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">5dp</item>
    </style>

</resources>
